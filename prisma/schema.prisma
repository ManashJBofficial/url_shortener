generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortenedURL {
  id         String   @id @default(uuid())
  long_url   String
  short_code String   @unique
  created_at DateTime @default(now())
}

model User {
  id         String   @id @default(uuid())
  user_id    String   @unique
  name       String?
  email   String
  created_at DateTime @default(now())
  image_url  String?  

  // Define a one-to-many relationship with AuthProvider
  authProviders           AuthProvider[]
  EmailPasswordCredential EmailPasswordCredential[]
}

model AuthProvider {
  id             String  @id @default(uuid())
  provider       String
  provider_id    String
  user_id        String

  // Define a many-to-one relationship with User
  user User @relation(fields: [user_id], references: [id])

  // Add a unique constraint to ensure a user has only one entry per provider
  @@unique([user_id, provider])
}

// Define the EmailPasswordCredential model
model EmailPasswordCredential {
  id       String @id @default(uuid())
  email    String @unique
  password String
  user_id  String

  // Define a one-to-one relationship with User
  user User @relation(fields: [user_id], references: [id])
}
